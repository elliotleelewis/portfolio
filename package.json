{
  "private": true,
  "scripts": {
    "start": "ng serve --host 0.0.0.0",
    "build": "ng build --prod",
    "test": "ng test --watch false",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "stylelint": "stylelint \"**/*.{scss,html}\"",
    "stylelint:fix": "stylelint \"**/*.{scss,html}\" --fix",
    "prettier": "prettier --check \"**/*.{md,ts,js,scss,html,json,yml}\" --ignore-path .gitignore",
    "prettier:fix": "prettier --write \"**/*.{md,ts,js,scss,html,json,yml}\" --ignore-path .gitignore"
  },
  "dependencies": {
    "@angular/animations": "^9.0.0",
    "@angular/common": "^9.0.0",
    "@angular/compiler": "^9.0.0",
    "@angular/core": "^9.0.0",
    "@angular/fire": "^6.0.0",
    "@angular/forms": "^9.0.0",
    "@angular/platform-browser": "^9.0.0",
    "@angular/platform-browser-dynamic": "^9.0.0",
    "@angular/router": "^9.0.0",
    "@angular/service-worker": "^9.0.0",
    "@fortawesome/fontawesome-free": "^5.0.0",
    "@nicky-lenaers/ngx-scroll-to": "^9.0.0",
    "bulma": "^0.9.0",
    "css-spring": "^4.0.0",
    "firebase": "^7.0.0",
    "rxjs": "~6.5.0",
    "subsink": "^1.0.0",
    "tslib": "~2.0.0",
    "webfontloader": "^1.0.0",
    "zone.js": "~0.10.0"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^9.0.0",
    "@angular-devkit/build-angular": "^0.901.0",
    "@angular/cli": "^9.0.0",
    "@angular/compiler-cli": "^9.0.0",
    "@angular/language-service": "^9.0.0",
    "@commitlint/cli": "^9.0.0",
    "@commitlint/config-conventional": "^9.0.0",
    "@types/jasmine": "^3.0.0",
    "@types/node": "^12.0.0",
    "@types/webfontloader": "^1.0.0",
    "codelyzer": "^5.0.0",
    "dotenv-webpack": "^1.0.0",
    "glob": "^7.0.0",
    "husky": "^4.0.0",
    "jasmine-core": "^3.0.0",
    "karma": "^5.0.0",
    "karma-chrome-launcher": "^3.0.0",
    "karma-coverage-istanbul-reporter": "^3.0.0",
    "karma-jasmine": "^3.0.0",
    "karma-jasmine-html-reporter": "^1.0.0",
    "prettier": "^2.0.0",
    "pretty-quick": "^2.0.0",
    "purgecss-webpack-plugin": "^2.0.0",
    "stylelint": "^13.0.0",
    "stylelint-config-prettier": "^8.0.0",
    "stylelint-config-rational-order": "^0.1.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.0.0",
    "stylelint-scss": "^3.0.0",
    "tslint": "^6.0.0",
    "tslint-config-prettier": "^1.0.0",
    "typescript": "~3.8.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -e",
      "pre-commit": "pretty-quick --staged --pattern \"**/*.{md,ts,js,scss,html,json,yml}\""
    }
  },
  "browserslist": [
    "defaults"
  ],
  "prettier": {
    "arrowParens": "always",
    "bracketSpacing": true,
    "endOfLine": "lf",
    "overrides": [
      {
        "files": [
          "*.json",
          "*.md",
          "*.yml"
        ],
        "options": {
          "tabWidth": 2,
          "useTabs": false
        }
      }
    ],
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "all",
    "useTabs": true
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-rational-order",
      "stylelint-config-prettier"
    ],
    "plugins": [
      "stylelint-scss"
    ],
    "rules": {
      "at-rule-no-unknown": null,
      "at-rule-no-vendor-prefix": true,
      "media-feature-name-no-vendor-prefix": true,
      "no-empty-source": null,
      "property-no-vendor-prefix": true,
      "selector-no-vendor-prefix": true,
      "selector-pseudo-element-colon-notation": "single",
      "selector-pseudo-element-no-unknown": [
        true,
        {
          "ignorePseudoElements": [
            "ng-deep"
          ]
        }
      ],
      "selector-type-no-unknown": null,
      "value-no-vendor-prefix": true,
      "scss/at-rule-no-unknown": true
    }
  }
}
