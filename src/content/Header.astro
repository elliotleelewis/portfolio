---
import { Image } from 'astro:assets';

import Card from '../components/Card.astro';
import profile from '../media/profile.jpg';
import { formatPhoneNumber } from '../utils/formatPhoneNumber';

// Obfuscate for simple scraper bots
const email = [...'siweleeltoille'].reverse().join('') + '@gmail.com';
const phone = 17_401_046_674 - 123_456_789;
---

<Card>
	<div
		class="flex flex-col items-center gap-4 text-center sm:flex-row sm:text-start"
	>
		<Image
			class="size-32 rounded-full"
			src={profile}
			alt="Profile Pic"
			width="128"
			height="128"
			densities={[1.5, 2]}
		/>
		<div>
			<h1 class="text-6xl font-bold">
				Elliot <span
					class="bg-gradient-to-r from-cyan-700/80 to-white/80 bg-[size:300%] bg-clip-text text-transparent"
					>Lewis</span
				>
			</h1>
			<h2 class="text-xl font-normal lowercase">Front-end Engineer</h2>
			<div class="font-thin lowercase">
				<div>
					<a
						class="inline-flex items-center gap-1 outline-none hover:underline focus:ring"
						href={`mailto:${email}`}
					>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							viewBox="0 0 24 24"
							fill="currentColor"
							class="size-4"
						>
							<path
								d="M1.5 8.67v8.58a3 3 0 0 0 3 3h15a3 3 0 0 0 3-3V8.67l-8.928 5.493a3 3 0 0 1-3.144 0L1.5 8.67Z"
							></path>
							<path
								d="M22.5 6.908V6.75a3 3 0 0 0-3-3h-15a3 3 0 0 0-3 3v.158l9.714 5.978a1.5 1.5 0 0 0 1.572 0L22.5 6.908Z"
							></path>
						</svg>
						<span>{email}</span>
					</a>
				</div>
				<div>
					<a
						class="inline-flex items-center gap-1 outline-none hover:underline focus:ring"
						href={`tel:+${phone}`}
					>
						<svg
							xmlns="http://www.w3.org/2000/svg"
							viewBox="0 0 24 24"
							fill="currentColor"
							class="size-4"
						>
							<path
								fill-rule="evenodd"
								d="M1.5 4.5a3 3 0 0 1 3-3h1.372c.86 0 1.61.586 1.819 1.42l1.105 4.423a1.875 1.875 0 0 1-.694 1.955l-1.293.97c-.135.101-.164.249-.126.352a11.285 11.285 0 0 0 6.697 6.697c.103.038.25.009.352-.126l.97-1.293a1.875 1.875 0 0 1 1.955-.694l4.423 1.105c.834.209 1.42.959 1.42 1.82V19.5a3 3 0 0 1-3 3h-2.25C8.552 22.5 1.5 15.448 1.5 6.75V4.5Z"
								clip-rule="evenodd"></path>
						</svg>
						<span>{formatPhoneNumber(phone)}</span>
					</a>
				</div>
			</div>
		</div>
	</div>
</Card>
